---
const prefix =[{
  number: 597,
  country: "Suriname"
}, {
  number: 1,
  country: "USA"
}, {
  number: 53,
  country: "Cuba"
}, {
  number: 549,
  country: "Argentina"
}];
---

<div class="w-10/12 md:w-[400px]">
  <h2 class="text-3xl font-bold tracking-tight text-primary sm:text-4xl">Whatsapp Redirect</h2>
  <div class="flex flex-col gap-4">
    <div>
      <label for="location" class="block text-sm font-medium leading-6 text-gray-900">Location</label>
      <select id="location" name="location" class="mt-2 block w-full rounded-md border-0 py-1.5 pl-3 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-primary/60 sm:text-sm sm:leading-6">
        {prefix.map((item) => (
          <option value={item.number}>{item.country}</option>
        ))}
      </select>
    </div>

    <div class="sm:col-span-3">
      <label for="phone" class="block text-sm font-medium leading-6 text-gray-900">Phone number</label>
      <div class="mt-2 flex">
        <span class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 border border-r-0 border-gray-300 rounded-l-md">
          +597
        </span>
        <input
          type="number"
          name="phone-number"
          id="phone-number"
          autocomplete="tel"
          class="flex-1 block w-full rounded-none rounded-r-md border-0 py-1.5 pl-1 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-primary/60 sm:text-sm sm:leading-6"
        >
      </div>
    </div>
    <div class="flex justify-end">
      <button type="submit" class="rounded-md bg-primary px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-primary/80 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary/60">Go</button>
    </div>
  </div>
</div>
